{% extends "CoreBundle::layout.html.twig" %}


{% block title %}
    Commande - {{ parent() }}
{% endblock %}

{% block body %}

    <h2 class="text-center marginBottom50">Informations sur la commande</h2>

    {% form_theme form 'form/fields.html.twig' %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}

    <div class="col-md-5 col-md-offset-1">
        <div class="form-group">
            {{ form_label(form.dateVisit, 'Jour de la visite : ', {'label_attr': {'class': 'control-label col-sm-4'}}) }}
            <div class="col-sm-4">
                {{ form_widget(form.dateVisit, {'attr': {'class': 'form-control js-datepicker'}}) }}
            </div>
            <div class="col-sm-12">
                {{ form_errors(form.dateVisit) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.ticketType, 'Type de billet : ', {'label_attr': {'class': 'control-label col-sm-4'}}) }}
            <div class="radio col-sm-3">
                {{ form_widget(form.ticketType.0) }}{{ form_label(form.ticketType.0) }}
            </div>
            <div class="radio col-sm-3">
                {{ form_widget(form.ticketType.1) }}{{ form_label(form.ticketType.1) }}
            </div>
            <div class="col-sm-12">
                {{ form_errors(form.ticketType) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.ticketsNb, 'Nombre de billets : ', {'label_attr': {'class': 'control-label col-sm-4'}}) }}
            <div class="col-sm-4">
                {{ form_widget(form.ticketsNb, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-sm-12">
                {{ form_errors(form.ticketsNb) }}
            </div>
        </div>
    </div>

    <div class="col-md-5 marginTop30">
        <div class="form-group">
            {{ form_label(form.mail.first, 'Votre adresse mail : ', {'label_attr': {'class': 'control-label col-sm-4 col-md-6'}}) }}
            <div class="col-sm-6">
                {{ form_widget(form.mail.first, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-sm-12">
                {{ form_errors(form.mail.first) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.mail.second, 'Confirmation mail : ', {'label_attr': {'class': 'control-label col-sm-4 col-md-6'}}) }}
            <div class="col-sm-6">
                {{ form_widget(form.mail.second, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-sm-12">
                {{ form_errors(form.mail.second) }}
            </div>
        </div>
    </div>

    <div class="col-md-12 text-center">
        {{ form_widget(form.valider, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
    </div>

    {{ form_end(form) }}

{% endblock %}
